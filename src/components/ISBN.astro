---
const { book } = Astro.props;
const {
    isbn, id 
} = book;
---

{!isbn && id && 
    <dt class="ID">ID</dt>
    <dd class="ID">
        <span
            data-id={id} 
            itemprop="id"
            set:html={id} />
    </dd>
}
{isbn && 
    <dt class="isbn">ISBN</dt>
    <dd class="isbn">
        <span
            data-isbn={isbn} 
            itemprop="isbn"
            set:html={isbn} />
    </dd>
}
