---
const {
    book: { translator = [] },
    showContributors = true,
} = Astro.props;

const translatorsData =
    translator.length > 0
        ? translator.map((translator: string) => {
              return `<span itemprop="translator" data-translator={translator}>${translator}</span>`;
          })
        : "";

const translatorList = new Intl.ListFormat("en-US", {
    style: "long",
    type: "conjunction",
}).format(translatorsData);
---

{
    translator && translator.length > 0 && showContributors && (
        <h4
            class="translator"
            itemprop="translator"
            set:html={`translated by ${translatorList}`}
        />
    )
}
