---
const { book } = Astro.props;
const { id, image = "/images/placeholder.png", title } = book;
---

{
    image && (
            <dt class="cover">Cover</dt>
            <dd class="cover">
                <img src={image} itemprop="image" data-cover={image} alt={title || id} />
            </dd>
    )
}
